{
    "manifest_version": 3,
    "name": "Tab Manager",
    "version": "1.0",
    "description": "Manages chrome tabs by grouping, easily filtering through to view or close tab, and closing all inactive tabs!",
    "permissions": [
      "tabs",
      "activeTab",
      "tabGroups",
      "storage"
     ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
      }
    ]
}